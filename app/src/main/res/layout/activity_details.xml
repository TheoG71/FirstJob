<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".DetailsActivity">


    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="580dp"
        android:text="Postulate" />

    <TextView
        android:id="@+id/title_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title :"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/company_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company :"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/location_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location :"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/created_at_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of publication :"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="220dp"/>

    <TextView
        android:id="@+id/description_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="310dp"
        android:text="Description :"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Title"
        android:layout_gravity="center"
        android:layout_below="@+id/title_master"
        />
    <TextView
        android:id="@+id/comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Company"
        android:layout_below="@+id/company_master"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="location"
        android:layout_gravity="center"
        android:layout_below="@+id/location_master"
        />

    <TextView
        android:id="@+id/created_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Date of publication"
        android:scrollbars = "vertical"
        android:layout_gravity="center"
        android:layout_below="@+id/created_at_master"
        />

    <TextView
        android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:textSize="20dp"
        android:text="Description"
        android:layout_gravity="center"
        android:layout_below="@+id/description_master"

        />

</RelativeLayout>


